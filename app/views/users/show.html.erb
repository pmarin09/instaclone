<h3 class="card-title"><%= @user.email %> Profile Page</h3>

<% @user.posts.each do |post| %>
<div class="card">
  <%= image_tag post.pic, class: "card-img-top" %>
  <div class="card-body">
    <p class="card-text"><%= post.caption %></p>
    <%= link_to post.user.email, post.user, class: "btn btn-primary" %>
  </div>
</div>
<%end%>
